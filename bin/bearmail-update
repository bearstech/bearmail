# bearmail-update - part of bearmail

use lib '/usr/share/bearmail/lib';
use Backend::Files;
use Getopt::Long qw(:config no_auto_abbrev no_ignore_case bundling);

# options
my $debug = 0;
my $mailmap;
my $help;

GetOptions(
	'd|debug'	=> \$debug,
	'c|config=s'	=> \$mailmap,
	'h|help'	=> \$help,
);

usage() if $help;

my $b = Backend::Files->new( debug => $debug, mailmap => $mailmap ); # Parse 'mailmap'
$b->apply();                               # Generate Postfix+Dovecot conf files and reload them


sub usage {
  print STDERR <<EOF;
Usage: bearmail-update [OPTIONS]

Options:
  -c,  --config		Configuration file path (mailmap)
  -d,  --debug		Print on screen instead of writing files
  -h,  --help		Display usage
EOF
}
